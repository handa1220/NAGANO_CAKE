<%= render "public/shared/header" %>

<div class="container-fluid">

  <div class="row pt-4">
    <div class="col-4 offset-2">
      <span class="h4 bg-light">　注文履歴詳細　</span>
    </div>
  </div>

  <div class="row pt-5">
    <div class="col-7 offset-1">
      <span class="h5 font-weight-bold">注文情報</span>
      <table class="table table-bordered mt-2">
        <tr>
          <th class="table-secondary">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送先</th>
          <td>
            〒<%= @order.postal_code %></br>
            <%= @order.address %></br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="table-secondary">支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="table-secondary">ステータス</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
    </div>

    <div class="col-3">
      <span class="h5 font-weight-bold">請求情報</span>
      <table class="table table-bordered mt-2">
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= (@order.total_price - @order.postage).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">ご請求額</th>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row pt-3">
    <div class="col-9 offset-1">
      <span class="h5 font-weight-bold">注文内容</span>
      <table class="table table-bordered mt-2">
        <tr class="table-secondary">
          <th style="width: auto">商品</th>
          <th style="width: 20%">単価(税込)</th>
          <th style="width: 12%">個数</th>
          <th style="width: 12%">小計</th>
        </tr>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price_at_purchase.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price_at_purchase * order_detail.amount).to_s(:delimite) %></td>
          </tr>
        <% end %>
    </div>
  </div>

</div>