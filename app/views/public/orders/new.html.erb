<%= render "public/shared/header" %>

<div class="container-fluid">
  <div class="row pt-4">
    <div class="col offset-2">
      <span class="h4 bg-light">　注文情報入力　</span>
    </div>
  </div>

  <%= form_with model: @order, url: confirm_orders_path, method: :post do |f| %>
    <div class="row pt-3">
      <div class="col pl-5">
        <p class="h4">支払方法</p>

        <div class="row form_group">
          <div class="col offset-1 pl-0">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
          </div>
        </div>

        <div class="row form_group">
          <div class="col offset-1 pl-0">
            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
          </div>
        </div>

      </div>
    </div>

    <div class="row pt-3">
      <div class="col pl-5">
        <p class="h4">お届け先</p>

        <div class="row form_group">
          <div class="col offset-1 pl-0">
            <%= f.radio_button :select_address, "0" %>
            <%= f.label :select_address, "ご自身の住所", class: "mb-0" %>
            <div class="row">
              <div class="col pl-4 ml-3">
                〒<%= current_customer.postal_code %>　<%= current_customer.address %></br>
                <%= current_customer.last_name %><%= current_customer.first_name %>
              </div>
            </div>
          </div>
        </div>

        <div class="row form_group pt-3">
          <div class="col-8 offset-1 pl-0">
            <%= f.radio_button :select_address, "1" %>
            <%= f.label :select_address, "登録済住所から選択", class: "mb-0" %>
            <div class="row">
              <div class="col pl-4 ml-3">
                <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display), {}, class: "form-control text-body" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row form_group pt-3">
          <div class="col offset-1 pl-0">
            <%= f.radio_button :select_address, "2" %>
            <%= f.label :select_address, "新しいお届け先", class: "mb-0" %>
            <div class="row pt-2">
              <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3 pl-4 ml-3" %>
              <%= f.text_field :postal_code, placeholder: "0000000", class: "col-3 form-control form-control-sm border-dark" %>
            </div>
            <div class="row pt-2">
              <%= f.label :address, "住所", class: "col-3 pl-4 ml-3" %>
              <%= f.text_field :address, placeholder: "東京渋谷区代々木神園町0-0", class: "col-6 form-control form-control-sm border-dark" %>
            </div>
            <div class="row pt-2">
              <%= f.label :name, "宛名", class: "col-3 pl-4 ml-3" %>
              <%= f.text_field :name, placeholder: "令和道子", class: "col-3 form-control form-control-sm border-dark" %>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="row justify-content-center pt-3">
      <%= f.submit "　確認画面に進む　", class: "btn btn-primary" %>
    </div>

  <% end %>