<%= render "public/shared/header" %>

<div class="container-fluid">
  <div class="row pt-4">
    <div class="col-4 offset-2">
      <span class="h4 bg-light">　注文情報確認　</span>
    </div>
  </div>

  <div class="row pt-3">
    <div class="col-7 offset-1">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_item.each do |cart_item| %>
            <% @total += cart_item.subtotal %>
            <tr>
              <td class="pt-1 pb-1"><%= image_tag cart_item.item.get_image(60,40) %>　<%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-3">
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">送料</th>
          <td><%= @postage %></td>
        </tr>
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">請求金額</th>
          <td><%= (@total + @postage).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>

  </div>

  <div class="row pt-3">
      <div class="col-2 offset-1 pr-0">
        <p class="h5 font-weight-bold">支払方法</p>
      </div>
      <div class="col-8 pl-0">
        <%= @order.payment_method_i18n %>
      </div>
    </div>

    <div class="row pt-3">
      <div class="col-2 offset-1 pr-0">
        <p class="h5 font-weight-bold">お届け先</p>
      </div>
      <div class="col-8 pl-0">
        <% if params[:order][:select_address] == "2" %>
          〒<%= @address.postal_code %>　<%= @address.address %></br>
          <%= @address.name %>
        <% else %>
          〒<%= @order.postal_code %>　<%= @order.address %></br>
          <%= @order.name %>
        <% end %>
      </div>
    </div>
