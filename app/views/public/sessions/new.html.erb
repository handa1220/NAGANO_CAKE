<header>
    <%= render "admin/shared/header" %>
</header>

<div class="container">
  <div class="row p-3">
    <div class="col pb-4">
      <span class="h4 bg-light">　ログイン　</span>
    </div>
  </div>

  <div class="row">
    <div class="col offset-md-1 pb-4">
      <span class="h5 bg-light">　会員の方はこちらからログイン　</span>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="form-group row">
    <%= f.label :email, "メールアドレス", class:"col-md-3 offset-md-2" %>
    <%= f.email_field :email, autofocus:true, autocomplete:"email", placeholder:"sample@example.com", class:"col-md-6 form-control form-control-sm border-dark " %>
  </div>
  <div class="form-group row">
    <%= f.label :password, "パスワード", class:"col-md-3 offset-md-2" %>
    <%= f.password_field :password, autocomplete:"current-password", class:"col-md-6 form-control form-control-sm border-dark" %>
  </div>
  <div class="form-group row pt-3">
    <%= f.submit "ログイン", class:"col-md-2 offset-md-5 btn btn-primary" %>
  </div>
  <% end %>

  <div class="row pt-5 pb-4">
    <div class="col offset-md-1">
      <span class="h5 bg-light">　会員登録がお済でない方　</span>
    </div>
  </div>
  <div class="row">
    <div class="col offset-md-3">
      <ins>
        <%= link_to "こちら", new_customer_registration_path %>
      </ins>
      　から新規会員登録してください。
    </div>
  </div>
</div>

