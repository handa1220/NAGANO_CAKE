<%= render "public/shared/header" %>

<body>
  <div class="container" style="height: 650px">
    <div class="row pt-4 pb-5">
      <div class="col offset-md-1">
        <span class="h4 bg-light">　新規会員登録　</span>
      </div>
    </div>

    <%= form_with model: @customer, url: customer_registration_path, id: "new_customer", class: "new_customer" do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="form-group row">
      <%= f.label :last_name, "名前", class: "col-md-2" %>
      <%= f.label :last_name, "(姓)" , class: "col-md-2 text-right" %>
      <%= f.text_field :last_name, class: "form-control form-control-sm col-md-3 border-dark", placeholder: "令和" %>
      <%= f.label :last_name, "(名)" , class: "col-md-2 text-right" %>
      <%= f.text_field :first_name, class: "form-control form-control-sm col-md-3 border-dark", placeholder: "道子" %>
    </div>
    <div class="form-group row">
      <%= f.label :last_name_kana, "フリガナ", class: "col-md-2" %>
      <%= f.label :last_name, "(セイ)" , class: "col-md-2 text-right" %>
      <%= f.text_field :last_name_kana, class: "form-control form-control-sm col-md-3 border-dark", placeholder: "レイワ" %>
      <%= f.label :last_name, "(メイ)" , class: "col-md-2 text-right" %>
      <%= f.text_field :first_name_kana, class: "form-control form-control-sm col-md-3 border-dark", placeholder: "ミチコ" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-md-4" %>
      <%= f.text_field :email, class: "form-control form-control-sm col-md-3 border-dark", placeholder: "example@example.com" %>
    </div>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-md-4" %>
      <%= f.text_field :postal_code, class: "form-control form-control-sm col-md-3 border-dark", placeholder: "0000000" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-md-4" %>
      <%= f.text_field :address, class: "form-control form-control-sm col-md-8 border-dark", placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>
    <div class="form-group row">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-md-4" %>
      <%= f.text_field :telephone_number, class: "form-control form-control-sm col-md-3 border-dark", placeholder: "00000000000" %>
    </div>
    <div class="form-group row">
      <%= f.label :password, "パスワード(6文字以上)", class: "col-md-4" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm col-md-3 border-dark" %>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation, "パスワード(確認用)" ,autocomplete: "new-password", class: "col-md-4" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm col-md-3 border-dark" %>
    </div>
    <div class="form-group row">
      <%= f.submit "　新規登録　", class: "btn btn-success col-md-3 offset-md-4" %>
    </div>
    <% end %>

    <div class="row p-3">
      <div class="col">
        <span class="h4 bg-light">　既に登録済みの方　</span>
      </div>
    </div>
    <div class="row">
      <div class="col offset-md-1">
        <ins>
          <%= link_to "こちら", new_customer_session_path %>
        </ins>
        　からログインしてください。
      </div>
    </div>
  </div>
</body>

<footer class="border"></footer>

