<%= render "admin/shared/header" %>

<div class="container-fluid">
  <div class="row pt-4">
    <div class="col">
      <span class="h4 bg-light">　配送先登録/一覧　</span>
    </div>
  </div>

  <%= form_with model: @address, url: addresses_path, method: :create do |f| %>
  <div class="form-group row pt-5">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-md-3 offset-1" %>
    <%= f.text_field :postal_code, class: "form-control col-md-2 border-dark", placeholder: "0000000" %>
  </div>
  <div class="form-group row">
    <%= f.label :address, "住所", class: "col-md-3 offset-1" %>
    <%= f.text_field :address, class: "form-control col-md-5 border-dark", placeholder: "東京渋谷区代々木神園町0-0" %>
  </div>
  <div class="form-group row">
    <%= f.label :name, "宛名", class: "col-md-3 offset-1" %>
    <%= f.text_field :name, class: "form-control col-md-2 border-dark", placeholder: "令和道子" %>
    <%= f.submit "新規登録", class: "col-md-2 offset-md-3 btn btn-success" %>
  </div>
  <% end %>

  <div class="row mt-5">
    <div class="col-10">
      <table class="table table-bordered ">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛先</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |addresses| %>
          <tr>
            <td><%= addresses.postal_code %></td>
            <td><%= addresses.address %></td>
            <td><%= addresses.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(addresses.id), class: "btn btn-success btn-sm" %>
              <%= link_to "消去する", addresses_path, method: :destroy, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

