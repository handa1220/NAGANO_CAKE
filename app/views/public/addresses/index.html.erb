<%= render "admin/shared/header" %>

<div class="container">
  <div class="row p-3">
    <div class="col pb-4">
      <span class="h4 bg-light">　配送先登録/一覧　</span>
    </div>
  </div>

  <%= form_with model: @address, url: addresses_path, method: :create do |f| %>
  <div class="form-group row">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-md-4" %>
    <%= f.text_field :postal_code, class: "form-control col-md-3 border-dark", placeholder: "0000000" %>
  </div>
  <div class="form-group row">
  <%= f.label :address, "住所", class: "col-md-4" %>
  <%= f.text_field :address, class: "form-control col-md-8 border-dark", placeholder: "東京渋谷区代々木神園町0-0" %>
  </div>
  <div class="form-group row">
  <%= f.label :name, "宛名", class: "col-md-4" %>
  <%= f.text_field :name, class: "form-control col-md-3 border-dark", placeholder: "令和道子" %>
  <%= f.submit "新規登録", class: "col-md-2 offset-md-3 btn btn-success" %>
  </div>
  <% end %>

  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <td>郵便番号</td>
          <td>住所</td>
          <td>宛先</td>
          <td></td>
        </tr>
        <%= @addresses.each do |addresses| %>
        <tr>
          <td><%= addresses.postal_code %></td>
          <td><%= addresses.address %></td>
        </tr>
      </table>
    </div>
  </div>

