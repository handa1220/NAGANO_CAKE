<%= render "public/shared/header" %>

<body>
  <div class="container-fluid" style="height: 650px">
    <div class="row pt-4">
      <div class="col offset-2">
        <span class="h4 bg-light">　配送先編集　</span>
      </div>
    </div>

    <%= form_with model: @address, url: address_path, method: :patch do |f| %>
    <div class="form-group row pt-5">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-md-3 offset-1" %>
      <%= f.text_field :postal_code, class: "form-control form-control-sm col-md-2 border-dark", placeholder: "0000000" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-md-3 offset-1" %>
      <%= f.text_field :address, class: "form-control form-control-sm col-md-5 border-dark", placeholder: "東京渋谷区代々木神園町0-0" %>
    </div>
    <div class="form-group row">
      <%= f.label :name, "宛名", class: "col-md-3 offset-1" %>
      <%= f.text_field :name, class: "form-control form-control-sm col-md-2 border-dark", placeholder: "令和道子" %>
      <%= f.submit "変更内容を保存", class: "col-md-2 offset-md-3 btn btn-success" %>
    </div>
    <% end %>
  </div>

</body>

<footer class="border"></footer>