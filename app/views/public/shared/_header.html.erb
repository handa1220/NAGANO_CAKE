  <header class="border">
    <div class="container-fuild">
      <div class="row">
        <div class="col-3 offset-1 pt-4">
          <%= link_to "　LOGO　", root_path ,class: "h1 text-decoration-none text-dark border border-secondary" %>
        </div>

        <p class="col-2 align-self-end text-right m-0">
          <% if customer_signed_in? %>
            ようこそ、<%= current_customer.last_name %>さん！
          <% end %>
        </p>

        <div class="col-6 text-right pt-4">
          <% if customer_signed_in? %>
            <%= link_to "マイページ" , my_page_customers_path ,class: "btn btn-outline-dark mr-2" %>
            <%= link_to "商品一覧" , items_path ,class: "btn btn-outline-dark mr-2" %>
            <%= link_to "カート" , cart_items_path ,class: "btn btn-outline-dark mr-2" %>
            <%= link_to "ログアウト" , destroy_customer_session_path , method: :delete ,class: "btn btn-outline-dark  mr-4" %>
          <% else %>
            <%= link_to "About" , about_path ,class: "btn btn-outline-dark mr-2" %>
            <%= link_to "商品一覧" , items_path ,class: "btn btn-outline-dark mr-2" %>
            <%= link_to "新規登録" , new_customer_registration_path ,class: "btn btn-outline-dark mr-2" %>
            <%= link_to "ログイン" , new_customer_session_path ,class: "btn btn-outline-dark mr-4" %>
          <% end %>
        </div>
      </div>
      <div class="row justify-content-end pb-3 mr-2">
        <div class="col-3 input-group">
          <input class="form-control form-control-sm input-group-prepend" placeholder="Search"></input>
          <span class="input-group-btn input-group-append">
            <submit class="btn btn-outline-dark btn-sm"><i class="fas fa-search"></i></submit>
          </span>
        </div>
      </div>
    </div>
  </header>