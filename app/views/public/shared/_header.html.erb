  <header class="border">
    <div class="container-fuild">
      <div class="row">
        <div class="col-3 pt-4 pl-5">
          <a class="h1 text-decoration-none text-dark border border-secondary">　LOGO　</a>
        </div>
        <div class="col-9 text-right pt-4">
          <% if admin_signed_in? %>
          <%= link_to "マイページ" , my_page_customers_path ,class: "btn btn-outline-dark btn-sm mr-1" %>
          <%= link_to "商品一覧" , items_path ,class: "btn btn-outline-dark btn-sm mr-1" %>
          <%= link_to "カート" , cart_items_path ,class: "btn btn-outline-dark btn-sm mr-1" %>
