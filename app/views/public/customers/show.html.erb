<%= render "admin/shared/header" %>


<div class="container">
  <div class="row p-3">
    <div class="col pb-4">
      <span class="h4 bg-light">　マイページ　</span>
    </div>
  </div>

  <div class="row">
    <p class="col-2 h5 font-weight-bold">登録情報</p>
    <%= link_to "編集する", edit_information_customers_path, class: "col-2 btn btn-sm btn-success" %>
  </div>

  <div class="row mt-3">
    <div class="col-10">
      <table class="table table-bordered">
        <tr>
          <td class="bg-light">氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %> </td>
        </tr>
        <tr>
          <td class="bg-light">カナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="bg-light">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="bg-light">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="bg-light">電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="bg-light">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row pt-2">
    <p class="col-2 h5 font-weight-bold">配送先</p>
    <%= link_to "一覧を見る", addresses_path, class: "col-2 btn btn-sm btn-primary" %>
  </div>

  <div class="row pt-3">
    <p class="col-2 h5 font-weight-bold">注文履歴</p>
    <%= link_to "一覧を見る", orders_path, class: "col-2 btn btn-sm btn-primary" %>
  </div>

</div>