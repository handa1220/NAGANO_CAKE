<header>
    <%= render "admin/shared/header" %>
</header>

<div class="container">
  <div class="row p-3">
    <div class="col pb-4">
      <span class="h4 bg-light">　マイページ　</span>
    </div>
  </div>
  
  <div class="row">
    <p class="col-2 h5">登録情報</p>
    <%= link_to "編集する", edit_information_customers_path, class: "col-2 btn btn-sm btn-success" %>
  </div>
  
  <div class="row mt-3">
    <div class="col-10">
      <table class="table table-bordered">
        <tr>
          <td class="bg-light">氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %> </td>
        </tr>
        <tr>
          <td class="bg-light">カナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
      </table>
    </div>
  </div>