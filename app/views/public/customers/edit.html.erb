<header>
    <%= render "admin/shared/header" %>

<div class="container">
  <div class="row p-3">
    <div class="col pb-4">
      <span class="h4 bg-light">　会員情報編集　</span>
    </div>
  </div>
  
  <%= form_with model: @customer, url: information_customers_path, method: :patch do |f| %>
  <div class="form-group row">
    <%= f.label :last_name, "氏名", class: "col-md-3" %>
    <%= f.text_field :last_name, class: "form-control col-md-3 border-dark" %>
    <%= f.text_field :first_name, class: "form-control col-md-3 ml-4 border-dark" %>
  </div>
  <div class="form-group row">
    <%= f.label :last_name_kana, "フリガナ", class: "col-md-3" %>
    <%= f.text_field :last_name_kana, class: "form-control col-md-3 border-dark" %>
    <%= f.text_field :first_name_kana, class: "form-control col-md-3 ml-4 border-dark" %>
  </div>
  <div class="form-group row">
    <%= f.label :postal_code, "郵便番号", class: "col-md-3" %>
    <%= f.text_field :postal_code, class: "form-control col-md-3 border-dark" %>
  </div>
  <div class="form-group row">
    <%= f.label :address, "住所", class: "col-md-3" %>
    <%= f.text_field :address, class: "form-control col-md-8 border-dark" %>
  </div>
  <div class="form-group row">
    <%= f.label :telephone_number, "電話番号", class: "col-md-3" %>
    <%= f.text_field :telephone_number, class: "form-control col-md-3 border-dark" %>
  </div>
  <div class="form-group row">
    <%= f.label :email, "メールアドレス", class: "col-md-3" %>
    <%= f.text_field :email, class: "form-control col-md-3 border-dark" %>
  </div>
  <div class="form-group row">
    <%= f.submit "　編集内容を保存　", class: "btn btn-success col-md-4 offset-md-3" %>
    <%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-danger col-md-2 offset-md-2" %>
  </div>
  <% end %>

</div>