<%= render "admin/shared/header" %>

<div class="container-fluid">
  <div class="row pt-5">
    <div class="col-3 pl-5">
      <table class="table table-borderless table-sm border border-dark">
        <thead>
          <tr align="center" class="border border-dark">
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              　<%= genre.name %>
            </td>
          </tr>
          <% end %>
          <tr>
            <td>　</td>
          </tr>
          <tr>
            <td>　</td>
          </tr>
          <tr>
            <td>　</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <%= image_tag @item.get_image(300,200) %>
    </div>

    <div class="col-5">
      <div class="row">
        <p class="h3 font-weight-bold">
          <%= @item.name %>
        </p>
      </div>

      <div class="row pt-3">
        <p class="h5">
          <%= @item.introduction %>
        </p>
      </div>

      <div class="row pt-5 d-flex align-items-center">
        <span class="h4">
          ￥<%= @item.price.to_s(:delimited) %>
        </span>
        <span>　(税込)</span>
      </div>

      <div class="row pt-4">

      </div>

    </div>

  </div>
</div>
