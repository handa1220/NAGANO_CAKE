<body　class="d-flex flex-column vh-100">

  <header>
    <%= render "admin/shared/header" %>
  </header>

  <main>
    <div class="container">
      <div class="row">
        <div class="col-4 offset-1 text-center">
          <p class="h4 bg-light">管理者ログイン</h4>
        </div>
      </div>
      <div class="row">
        <div class="col">
          
        <%= form_with model: @admin, url: admin_session_path do |f| %>
          <div class="field">
            <%= f.label :email,"メールアドレス" %>
            <%= f.email_field :email, autofocus: true, :placeholder =>"sample@example.com", autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン" , class: "btn btn-primary" %>
          </div>
        <% end %>
        
        </div>
      </div>
    </div>
  </main>

  <footer></footer>

</body>