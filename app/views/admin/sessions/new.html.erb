<%= render "admin/shared/header" %>


<main>
  <div class="container">
    <div class="row">
      <div class="col-4 text-center pt-3">
        <p class="h4 bg-light">管理者ログイン</h4>
      </div>
    </div>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field row mt-3">
          <%= f.label :email,"メールアドレス" ,class: "col-md-3 offset-md-1" %>
          <%= f.email_field :email, autofocus: true, :placeholder =>"sample@example.com", autocomplete: "email", class: "col-md-7" %>
        </div>
    
        <div class="field row mt-3">
          <%= f.label :password, "パスワード" ,class: "col-md-3 offset-md-1" %>
          <%= f.password_field :password, autocomplete: "current-password" ,class: "col-md-7" %>
        </div>

        <div class="actions row mt-4">
          <%= f.submit "ログイン" , class: "col-md-2 offset-md-4 btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</main>
