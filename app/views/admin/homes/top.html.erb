<header>
  <%= render "admin/shared/header" %>
</header>

<main>

  <div class="container">
    <div class="row">
      <span class="h4 bg-light">注文履歴一覧</span>
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <ins>
              <%= link_to admin_order_path(order.id) do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M')%>
              <% end %>
              </ins>
            </td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td>
              <%= @total_amount %>
            </td>
            <td>
              <%= order.order_status_i18n %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>

</main>