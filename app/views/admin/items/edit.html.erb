<%= render "admin/shared/header" %>


<body>
  <div class="container" style="height: 650px">

    <div class="row">
      <div class="col-3 offset-1 text-center pt-3">
        <p class="h4 bg-light">商品編集</p>
      </div>
    </div>

    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
      <div class="form-group row pt-4">
        <%= f.label :image, "商品画像", class: "col-md-2 col-form-label" %>
        <div class="col-md-8">
          <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :name, "商品名", class: "col-md-2 col-form-label" %>
        <div class="col-md-8">
         <%= f.text_field :name, :placeholder => "商品名", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :introduction, "商品説明", class: "col-md-2 col-form-label" %>
        <div class="col-md-8">
          <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します", class: "form-control", rows: "5" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :genre_id, "ジャンル", class: "col-md-2 col-form-label" %>
        <div class="col-md-8">
          <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "-- 選択してください --"}, {class: "form-control"}) %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :price, "税抜価格", class: "col-md-2 col-form-label" %>
        <div class="col-md-8">
          <%= f.text_field :price, :placeholder => "1000", class: "form-control" %>
        </div>
        <%= f.label :price, "円" %>
      </div>

      <div class="form-group row">
        <%= f.label :in_active, "販売ステータス", class: "col-md-2 col-form-label" %>
        <div class="col-md-8">
          <%= f.radio_button :in_active, :true %>
          <%= f.label :in_active, "販売中" %>
          <%= f.radio_button :in_active, :false %>
          <%= f.label :in_active, "販売停止中" %>
        </div>
      </div>

      <div class="form_group row pb-4">
        <div class="col text-center">
          <%= f.submit "　変更を保存　", class: "btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>

  </div>

</body>

<footer class="border"></footer>