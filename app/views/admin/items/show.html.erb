<header>
    <%= render "admin/shared/header" %>
</header>



<div class="container">
  <div class="row">
    <h3>商品詳細</h3>
  </div>

  <div class="row">
    <div class="col-md-3 col-lg-3">
      <%= image_tag @item.get_image(200,300) %>
    </div>

    <div class="col-md-9 col-lg-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格</br>(税抜価格)</td>
            <td><%= (@item.price*1.1).round.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.in_active? %>
                <p class="text-success"><strong>販売中</strong></p>
              <% else %>
                <p class="text-secondary"><strong>販売停止中</strong></p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "　編集する　", edit_admin_item_path(@item.id), class: "btn btn-success btn-lg" %>
      </div>
    </div>
  </div>
</div>