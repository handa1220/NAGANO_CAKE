<header>
    <%= render "admin/shared/header" %>
</header>

<h3>商品詳細</h3>

<div class="container">
  <div class="row">
    <div class="col-md-3 col-lg-3">
      <%= image_tag @item.image %>
    </div>

    <div class="col-md-9 col-lg-3">
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格</br>(税抜価格)</td>
            <td><%= ((@item.price)*(1.1)).round %> (<%= @item.price %>)円</td>
          </tr>
          
        </tbody>
      </table>

    </div>
  </div>
</div>