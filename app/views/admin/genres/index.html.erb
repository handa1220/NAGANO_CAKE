<header>
    <%= render "admin/shared/header" %>
</header>

<main class="border">

  <span class="h4 bg-light">ジャンル一覧・追加</span>

  <%= form_with model: @genre, url: "/admin/genres", method: :create do |f| %>
  <div class=field>
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name, :placeholder => "ジャンル名" %>
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  <% end %>

  <table class="table">
    <thead>
      <tr class="table-secondary">
        <th colspan="2">ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>









</main>