<%= render "admin/shared/header" %>

<body>
  <div class="container" style="height: 650px">
    <div class="row">
      <div class="col-4 text-center pt-4">
        <p class="h4 bg-light">ジャンル編集</p>
      </div>
    </div>

    <div class="row">
      <div class="col pt-5">
        <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, class: "ml-5" %>
          <%= f.submit "変更を保存", class: "btn btn-success ml-5" %>
        <% end %>
      </div>
    </div>
  </div>
</body>

<footer class="border"></footer>