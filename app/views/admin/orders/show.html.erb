<header>
    <%= render "admin/shared/header" %>
</header>

<main>
  <div class="container">
    <div class="row p-3">
      <span class="h4 bg-light">　注文履歴詳細　</span>
    </div>

    <div class="row">
      <div class="col-md-3"><p>購入者</p></div>
      <div class="col-md-9">
        <%= link_to admin_customer_path(@order.customer.id) do %>
        <%= @order.customer.last_name %><%= @order.customer.first_name %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3"><p>注文日</p></div>
      <div class="col-md-9">
        <%= @order.created_at.strftime('%Y/%m/%d')%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3"><p>配送先</p></div>
      <div class="col-md-9">
        〒<%= @order.delivery_postal_code %><%= @order.delivery_address %></br>
        <%= @order.delivery_name %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3"><p>支払方法</p></div>
      <div class="col-md-9">
        <%= @order.payment_method_i18n %>
      </div>
    </div>

    <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
    <div class="form-group row">
      <%= f.label :order_status, "注文ステータス", class: "col-md-3" %>
      <div class="col-md-9">
        <%= f.select :order_status, Order.order_statuses_i18n.invert, {class: "form-control"} %>
        <%= f.submit "更新", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>

    <div class="row">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.item.name %>
            </td>
            <td>
              <%= order_detail.price_at_purchase %>
            </td>
            <td>
              <%= order_detail.amount %>
            </td>
            <td>
              <%= order_detail.price_at_purchase*order_detail.amount %>
            </td>
            <td>
              <%= form_with model: @order_details, url: admin_order_detail_path, method: :patch do |f| %>
                <%= f.select :production_status, OrderDetail.production_statuses_i18n.invert, {class: "form-control"} %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</main>