<header>
    <%= render "admin/shared/header" %>


<main>
  <div class="container">
    <div class="row">
      <div class="col-4 text-center pt-3">
        <p class="h4 bg-light">注文履歴詳細</p>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <table class="table table-borderless table-sm">
          <tbody>
            <tr>
              <th>購入者</th>
              <td>
                <ins>
                <%= link_to admin_customer_path(@order.customer.id), class: "text-body" do %>
                <%= @order.customer.last_name %><%= @order.customer.first_name %>
                <% end %>
                </ins>
              </td>
            </tr>
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>
                〒<%= @order.delivery_postal_code %><%= @order.delivery_address %></br>
                <%= @order.delivery_name %>
              </td>
            </tr>
            <tr>
              <th>支払い方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td>
                <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
                  <%= f.select :order_status, Order.order_statuses_i18n.invert, {}, {class: "form-control-sm"} %>
                  <%= f.submit "更新", class: "btn btn-success btn-sm" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 col-lg-9">
        <table class="table">
          <thead>
            <tr class="table-secondary">
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= order_detail.item.name %>
              </td>
              <td>
                <%= order_detail.price_at_purchase.to_s(:delimited) %>
              </td>
              <td>
                <%= order_detail.amount %>
              </td>
              <td>
                <%= (order_detail.price_at_purchase*order_detail.amount).to_s(:delimited) %>
              </td>
              <td>
                <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch do |f| %>
                  <%= f.select :production_status, OrderDetail.production_statuses_i18n.invert, {}, {class: "form-control-sm"} %>
                  <%= f.submit "更新", class: "btn btn-success btn-sm" %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-md-4 col-lg-3 align-self-end">
        <table class="table table-sm table-borderless">
          <tr>
            <th>商品合計</th>
            <td><%= (@order.total_price-@order.postage).to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.postage %>円</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td><%= @order.total_price.to_s(:delimited) %>円</td>
          </tr>

        </table>
      </div>
    </div>
  </div>
</main>