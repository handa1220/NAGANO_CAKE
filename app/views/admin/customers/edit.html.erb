<%= render "admin/shared/header" %>

<body>

  <div class="container" style="height: 650px">
    <div class="row p-3">
      <span class="h4 bg-light">　<%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集　</span>
    </div>

    <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <div class="row">
      <div class="col-md-3"><p>会員ID</p></div>
      <div class="col-md-3"><%= @customer.id %></div>
    </div>
    <div class="form-group row">
      <%= f.label :last_name, "氏名", class: "col-md-3" %>
      <%= f.text_field :last_name, class: "form-control form-control-sm col-md-3" %>
      <%= f.text_field :first_name, class: "form-control form-control-sm col-md-3 ml-4" %>
    </div>
    <div class="form-group row">
      <%= f.label :last_name_kana, "フリガナ", class: "col-md-3" %>
      <%= f.text_field :last_name_kana, class: "form-control form-control-sm col-md-3" %>
      <%= f.text_field :first_name_kana, class: "form-control form-control-sm col-md-3 ml-4" %>
    </div>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号", class: "col-md-3" %>
      <%= f.text_field :postal_code, class: "form-control form-control-sm col-md-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-md-3" %>
      <%= f.text_field :address, class: "form-control form-control-sm col-md-8" %>
    </div>
    <div class="form-group row">
      <%= f.label :telephone_number, "電話番号", class: "col-md-3" %>
      <%= f.text_field :telephone_number, class: "form-control form-control-sm col-md-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-md-3" %>
      <%= f.text_field :email, class: "form-control form-control-sm col-md-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :is_deleted, "会員ステータス", class: "col-md-3" %>
      <div class="col-md-3">
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "退会" %>
      </div>
    </div>
    <div class="form-group row pt-3">
      <%= f.submit "　変更を保存　", class: "btn btn-success col-md-3 offset-md-3" %>
    </div>
    <% end %>

  </div>

</body>

<footer class="border"></footer>